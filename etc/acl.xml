<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Customer::customer">
                    <resource id="Magefan_LoginAsCustomer::login" title="Login As Customer" sortOrder="50">
                        <resource id="Magefan_LoginAsCustomer::login_button" title="Login As Customer Button" sortOrder="10" />
                        <resource id="Magefan_LoginAsCustomer::login_log" title="Login As Customer Log" sortOrder="20" />
                    </resource>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Magefan_LoginAsCustomer::config_section" title="Login As Customer Section" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
